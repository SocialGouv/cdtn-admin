{
  "compilerOptions": {
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": ["es2022"],
    "module": "NodeNext",
    "target": "es2022",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "outDir": "build",
    "moduleDetection": "force",
    "allowJs": true,
    "noUncheckedIndexedAccess": true,
    "sourceMap": true,
    "composite": true,
    "declarationMap": true
  }
}
