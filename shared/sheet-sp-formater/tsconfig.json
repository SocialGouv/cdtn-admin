{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": ["es2020"],
    "module": "esnext",
    "moduleResolution": "Node"
  },
  "include": ["src", "@types"]
}
