{
  "compilerOptions": {
    "outDir": "./lib",
    "declaration": true,
    "checkJs": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": ["es2020"],
    "module": "commonjs",
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist", ".next"]
}
