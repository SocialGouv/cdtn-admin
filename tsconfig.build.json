{
  "compilerOptions": {
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": [
      "es2020"
    ],
    "module": "commonjs",
    "resolveJsonModule": true
  },
  "exclude": [
    "__tests__",
    "node_modules",
    "dist",
    "lib",
  ]
}
