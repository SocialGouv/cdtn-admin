{
  "extends": ["github>SocialGouv/renovate-config:light"],
  "packageRules": [
    {
      "packagePatterns": ["next-*"],
      "groupName": "@vercel/next",
      "updateTypes": ["major"]
    },
    {
      "packagePatterns": ["^react", "react-dom", "react-test-renderer"],
      "groupName": "react",
      "updateTypes": ["major"]
    },
    {
      "packagePatterns": ["remark", "strip-markdown"],
      "groupName": "remark",
      "updateTypes": ["major"]
    },
    {
      "packagePatterns": ["@rollup"],
      "groupName": "@rollup",
      "updateTypes": ["major"]
    },
    {
      "packagePatterns": ["reach*"],
      "groupName": "@reach",
      "updateTypes": ["major"]
    }
  ]
}
