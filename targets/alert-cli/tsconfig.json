{
  "compilerOptions": {
    "target": "ESNext",
    "module": "es2015",
    "moduleResolution": "node",
    "allowJs": true,
    "lib": ["es2020", "DOM"],
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "include": ["src", "@types"],
  "exclude": ["node_modules", "dist"]
}
