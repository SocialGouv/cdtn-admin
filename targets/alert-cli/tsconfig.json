{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": ["es2019"],
    "baseUrl": ".",
    "paths": {
      "*": ["*", "src/@types/*"]
    }
  },
  "include": ["src"]
}
