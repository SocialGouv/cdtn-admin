{
  "name": "alert-cli",
  "version": "1.8.9",
  "dependencies": {
    "@shared/graphql-client": "^1.8.9",
    "@socialgouv/cdtn-slugify": "^4.52.1",
    "@socialgouv/cdtn-sources": "^4.45.0",
    "memoizee": "^0.4.15",
    "node-fetch": "^2.6.1",
    "nodegit": "0.27.0",
    "semver": "^7.3.5",
    "unist-util-parents": "^1.0.3",
    "unist-util-select": "^4.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/preset-env": "^7.14.9",
    "@shared/types": "^1.8.9",
    "@socialgouv/contributions-data-types": "^3.27.0",
    "@socialgouv/eslint-config-typescript": "^1.84.2",
    "@socialgouv/fiches-travail-data-types": "^4.184.0",
    "@socialgouv/kali-data-types": "^2.124.0",
    "@socialgouv/legi-data-types": "^2.68.0",
    "@types/jest": "^26.0.24",
    "@types/memoizee": "^0.4.6",
    "@types/node": "^14.17.9",
    "@types/node-fetch": "^2.5.12",
    "@types/nodegit": "^0.27.3",
    "@types/semver": "^7.3.8",
    "@types/unist": "^2.0.6",
    "@vercel/ncc": "0.29.1",
    "babel-jest": "^27.0.6",
    "builtin-modules": "^3.2.0",
    "eslint": "^7.32.0",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.4",
    "typescript": "^4.3.5"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "scripts": {
    "build": "ncc build ./src/index.ts -o ./dist -e nodegit -s",
    "start": "node --enable-source-maps --unhandled-rejections=strict ./dist/index.js",
    "start:debug": "rm -rf data/* && ncc build ./src/index.ts -o ./dist -e nodegit -s && HASURA_GRAPHQL_ENDPOINT=http://localhost:8080/v1/graphql HASURA_GRAPHQL_ADMIN_SECRET=admin1 node --enable-source-maps --unhandled-rejections=strict ./dist/index.js",
    "lint": "eslint src",
    "clean": "rm -rf data/*",
    "types": "tsc",
    "test": "jest"
  },
  "jest": {
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!**/node_modules/**"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "roots": [
      "<rootDir>/src"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/data/"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ]
  },
  "lint-staged": {
    "*.{j,t}s": [
      "eslint --fix",
      "jest --bail --findRelatedTests"
    ]
  }
}
