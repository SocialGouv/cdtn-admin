{
  "name": "alert-cli",
  "version": "1.3.3",
  "dependencies": {
    "@shared/graphql-client": "^1.3.3",
    "@socialgouv/cdtn-slugify": "^4.45.0",
    "@socialgouv/cdtn-sources": "^4.45.0",
    "memoizee": "^0.4.15",
    "node-fetch": "^2.6.1",
    "nodegit": "0.27.0",
    "semver": "^7.3.5",
    "unist-util-parents": "^1.0.3",
    "unist-util-select": "^3.0.4"
  },
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "@shared/types": "^1.3.3",
    "@socialgouv/contributions-data-types": "^3.20.0",
    "@socialgouv/eslint-config-typescript": "^1.70.0",
    "@socialgouv/fiches-travail-data-types": "^4.111.0",
    "@socialgouv/kali-data-types": "^2.75.0",
    "@socialgouv/legi-data-types": "^2.40.0",
    "@types/jest": "^26.0.22",
    "@types/memoizee": "^0.4.5",
    "@types/node": "^14.14.37",
    "@types/node-fetch": "^2.5.10",
    "@types/nodegit": "^0.26.15",
    "@types/semver": "^7.3.4",
    "@types/unist": "^2.0.3",
    "@vercel/ncc": "0.28.3",
    "babel-jest": "^26.6.3",
    "builtin-modules": "^3.2.0",
    "eslint": "^7.23.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.6",
    "typescript": "^4.2.4"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "scripts": {
    "build": "ncc build ./src/index.ts -o ./dist -e nodegit -s",
    "start": "node --enable-source-maps --unhandled-rejections=strict ./dist/index.js",
    "start:dev": "HASURA_GRAPHQL_ENDPOINT=http://localhost:8080/v1/graphql HASURA_GRAPHQL_ADMIN_SECRET=admin1 node --enable-source-maps --unhandled-rejections=strict ./dist/index.js",
    "lint": "eslint src",
    "clean": "rm -rf data/*",
    "types": "tsc",
    "test": "jest"
  },
  "jest": {
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!**/node_modules/**"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "roots": [
      "<rootDir>/src"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/data/"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ]
  },
  "lint-staged": {
    "*.{j,t}s": [
      "eslint --fix",
      "jest --bail --findRelatedTests"
    ]
  }
}
