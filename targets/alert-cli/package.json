{
  "name": "alert-cli",
  "version": "1.0.0-alpha.1",
  "dependencies": {
    "@shared/graphql-client": "^1.0.0-alpha.1",
    "@socialgouv/cdtn-slugify": "^4.41.0",
    "@socialgouv/cdtn-sources": "^4.43.0",
    "@types/node-fetch": "^2.5.8",
    "node-fetch": "^2.6.1",
    "nodegit": "0.27.0",
    "semver": "^7.3.4",
    "unist-util-parents": "^1.0.3",
    "unist-util-select": "^3.0.4"
  },
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "@shared/types": "^1.0.0-alpha.1",
    "@socialgouv/contributions-data-types": "^3.8.0",
    "@socialgouv/datafiller-data-types": "^2.15.0",
    "@socialgouv/eslint-config-recommended": "^1.49.0",
    "@socialgouv/fiches-travail-data-types": "^4.61.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.25",
    "@types/node-fetch": "^2.5.8",
    "@types/nodegit": "^0.26.12",
    "@types/semver": "^7.3.4",
    "@types/unist": "^2.0.3",
    "@vercel/ncc": "0.27.0",
    "babel-jest": "^26.6.3",
    "builtin-modules": "^3.2.0",
    "eslint": "^7.19.0",
    "esm": "^3.2.25",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "build": "ncc build ./src/index.js -o ./dist -e nodegit -s",
    "poststart": "sh scripts/clean.sh",
    "start": "node --enable-source-maps --unhandled-rejections=strict ./dist/index.js",
    "start:dev": "HASURA_GRAPHQL_ENDPOINT=http://localhost:8080/v1/graphql HASURA_GRAPHQL_ADMIN_SECRET=admin1 node -r esm src/index.js",
    "start:dump": "HASURA_GRAPHQL_ENDPOINT=http://localhost:8080/v1/graphql HASURA_GRAPHQL_ADMIN_SECRET=admin1 DUMP=true node -r esm src/index.js > data/dump.json",
    "lint": "eslint src/**/*.js",
    "types": "tsc",
    "test": "jest"
  },
  "jest": {
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**",
      "!**/data/**"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/data/"
    ]
  },
  "lint-staged": {
    "*.{j,t}s": [
      "eslint --fix",
      "jest --bail --findRelatedTests"
    ]
  }
}
