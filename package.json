{
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "husky": "^5.1.3",
    "lerna": "^3.22.1",
    "nps": "^5.10.0",
    "nps-utils": "^1.7.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "nps pre-commit",
      "pre-push": " nps pre-push",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "private": true,
  "scripts": {
    "build": "nps build",
    "dev": "nps dev",
    "lint": "nps lint",
    "start": "nps",
    "test": "nps test",
    "k8s": "yarn --silent --cwd .k8s"
  },
  "workspaces": [
    "shared/*",
    "targets/*"
  ],
  "name": "cdtn-admin"
}
